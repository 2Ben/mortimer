<fieldset class="common">
	<legend class="hidden"><span class="hidden">Create Group Form</span></legend>
	
	<div class="field text">
		<label for="group_title">Name:</label>
		<input <%= disabled_unless_admin_access(@group, current_user) %> id="group_title" name="group[title]" value="<%= @group.title %>" size='20' maxlength='40' />
	</div>

	<div class="field">
		<label for="group_parent">Parent Group:</label>
    <select <%= disabled_unless_admin_access(@group, current_user) %> id="group_parent" name="group[parent_id]">
				<%=  options_for_select @groups, @group.parent_id %>
		</select>  
	</div>
  
</fieldset>
