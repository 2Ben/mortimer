<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en"> 
	<head>
		<meta http-equiv="Content-Type" content="Content-type:text/html; charset=utf-8" />	
		<meta http-equiv="imagetoolbar" content="no" />
		<meta name="description" content="" />
		<meta name="keywords" content="" />
		<meta name="Author" content="Alexander Interactive www.alexanderinteractive.com" />  
		<meta name="Classification" content="" /> 
		<meta name="revisit-after" content="30 days" />
		<meta name="copyright" content="Copyright 2009 Alexander Interactive" />
		<meta name="distribution" content="global" />
		<meta name="language" content="English" /> 
		<meta name="robots" content="noindex,nofollow" />
    <title>mortimer</title>

		<%= stylesheet_link_tag "reset.css" %>
		<%= stylesheet_link_tag "base.css" %>
		<%= stylesheet_link_tag "interior.css" %>
		<%= stylesheet_link_tag "smoothness/jquery-ui.css" %>

    <%= csrf_meta_tag %>
		<%= javascript_include_tag :defaults, "jquery-ui.js" %>
    <%= stylesheet_link_tag 'formtastic', 'my_formtastic_changes' %>
    <%= yield :javascript_includes %>

		<link rel="shortcut icon" type="image/x-icon"  href="/favicon.ico" />
	  </head>
	  <body>
	  
		<!-- #container -->
		<div id="container">
			<!-- #wrapper -->
			<div id="wrapper">
				<!-- #header -->
				<div id="header" class="clear">
					<a href="/" id="logo">Mortimer</a>
					
					<!-- #nav_utility -->
					<div id="nav_utility" class="clear">
						<ul class="clear">
							<li><%= t("logged_in_as") %> <em><%= current_user.login %></em></li>
							<li class="last"><a href="/logout"><%= t("logout") %></a></li>
						</ul>
					</div>
					<!-- /#nav_utility -->
						
				</div>
				<!-- /#header -->
          
				<!-- #nav_main -->
				<div id="nav_main" class="clear">
					<ul class="clear">
					<% if current_user.is_admin? %>
						<%= render :partial => "layouts/admin_nav" %>
					<% else %>
						<%= render :partial => "layouts/user_nav" %>
					<% end %>  
					</ul>
				</div>
				<!-- /#nav_main -->
		  
				<!-- #content -->
				<div id="content">
					<!-- #content_main -->
					<div id="content_main" class="clear">
						<%= yield %>
					</div>
					<!-- /#content_main -->
					<div id="content_bottom"><!-- --></div>
				</div>
				<!-- /#content -->
				
				<!-- #footer -->
				<div id="footer" class="clear">
					<!-- #footer_content -->
					<div id="footer_content" class="clear">
						<a href="http://www.alexanderinteractive.com/blog/2009/02/mortimer-a-rails-password-manager.html" rel="external">About Mortimer</a>
						<a id="logo_ai" href="http://www.alexanderinteractive.com" rel="external" title="Developed by Alexander Interactive">Alexander Interactive</a>
					</div>
				</div>
				<!-- /#footer -->

			</div>
			<!-- /#wrapper -->
		</div>
		<!-- /#container -->
	</body>
</html>
