<dl>
  <dt>Title:</dt>
  <dd>
    <input name="entry[title]" value="<%= @entry.title %>" size='20' maxlength='40'/>
  </dd>
  
  <dt>Username:</dt>
  <dd>
    <input name="entry[username]" value="<%= @entry.username %>" size='20' maxlength='40'/>
  </dd>

  <dt>Password:</dt>
  <dd>
    <input type="password" name="entry[password]" value="<%= @entry.password %>" size='20' maxlength='40'/>
  </dd>
  
  <dt>Confirmation:</dt>
  <dd>
    <input type="password" name="entry[password_confirmation]" value="<%= @entry.password_confirmation %>" size='20' maxlength='40'/>
  </dd>

  <dt>Url:</dt>
  <dd>
    <input name="entry[url]" value="<%= @entry.url %>" size='20' maxlength='40'/>
  </dd>

  <dt>Notes:</dt>
  <dd>
    <textarea name="entry[notes]"><%= @entry.notes %></textarea>
  </dd>

  <dt>Group:</dt>
  <dd>
    <select name="entry[group_id]">
      <%= options_for_select(@groups, @entry.group_id) %>
    </select>  
  </dd>

</dl>
