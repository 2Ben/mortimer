<!-- .overlay_content -->
<div class="overlay_content">
	<div id="boxmenu">
		<h2>
		  <%= @entry.group.title %>:
		  <span>
		    <%= truncate(@entry.title, :length => 60) %>
		  </span>
		
			<% if @entry.allows_write_access_for?(current_user) %>
			<em>(<a href="<%= edit_entry_url(@entry) %>"><%= t("edit") %> / <%= t("delete") %> </a>)</em>
			<% end %>
		</h2>
	</div>
	
	<dl class="clear">
		<dt><%= t("title") %>:</dt>
		<dd><%= @entry.title %></dd>

		<dt><%= t("username") %>:</dt>
		<dd>
		<% if @entry.username.size > 35 %>
			<%= @entry.username[0..30] + "<br />" + @entry.username[30..-1]  %>
		<%else%>
			<%= @entry.username %>
		<%end%>
		</dd>

		<dt><%= t("password") %>:</dt>
    <dd id="password_container">
      <a href="javascript:void(0);">View</a>
    </dd>

		<% unless @entry.url.blank? %>
		<dt>Url:</dt>
		<dd><a href="<%= @entry.url %>" target="target-new"><%= truncate(@entry.url, :length => 30) %></a></dd>
		<% end %>

		<% unless @entry.description.blank? %>
		<dt><%= t("notes") %>:</dt>
		<dd><%= @entry.description %></dd>
		<% end %>
		
		<span class="hidden"><input value="<%= @entry.password %>"  id="hidden_password" class="hidden" /></span>
	</dl>

</div>
